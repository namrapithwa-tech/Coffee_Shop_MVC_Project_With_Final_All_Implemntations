@model DataTables.Models.Coffee.CityModel

@{
    ViewData["Title"] = Model.CityID > 0 ? "Edit City" : "Add City";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2>@ViewData["Title"]</h2>
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Message"]
                </div>
            }
            <form asp-action="SaveCity" method="post">
                @Html.HiddenFor(m => m.CityID)

                <div class="form-group">
                    <label asp-for="CityName"></label>
                    <input asp-for="CityName" class="form-control" />
                    <span asp-validation-for="CityName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CityCode"></label>
                    <input asp-for="CityCode" class="form-control" />
                    <span asp-validation-for="CityCode" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="StateID"></label>
                    <input asp-for="StateID" class="form-control" />
                    <span asp-validation-for="StateID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CountryID"></label>
                    <input asp-for="CountryID" class="form-control" />
                    <span asp-validation-for="CountryID" class="text-danger"></span>
                </div>

                <button type="submit" class="btn @((Model.CityID > 0) ? "btn-warning" : "btn-primary")">
                    @((Model.CityID > 0) ? "Update" : "Save")
                </button>
                <a asp-action="CityList" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
